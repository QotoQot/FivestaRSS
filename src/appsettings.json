{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  },
  "ApiKeys": {
    "GooglePlay": {
      "ServiceAccountKeyPath": "keys/google-play-key.json"
    },
    "AppStoreConnect": {
      "IssuerId": "YOUR-ISSUER-ID-HERE",
      "KeyId": "YOUR-KEY-ID-HERE", 
      "PrivateKeyPath": "keys/AuthKey_YOUR_KEY_ID.p8"
    }
  },
  "FeedSettings": {
    "MaxReviewsPerFeed": 100,
    "FeedDirectory": "feeds",
    "PollingIntervalMinutes": 60
  },
  "MonitoredApps": [
    {
      "Name": "Your App Name",
      "GooglePlayId": "com.yourcompany.yourapp",
      "AppStoreId": "123456789",
      "FeedFileName": "your-app.xml"
    }
  ]
}
